{
  "name": "@buckneri/streamchart",
  "version": "0.2.6",
  "description": "Just a stream chart visualisation",
  "main": "./dist/streamchart.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run compile-js & npm run make",
    "compile-css": "npm run c-scss & npm run c-postcss",
    "compile-js": "rollup -c",
    "c-postcss": "postcss docs/css/streamchart.css --no-map -o docs/css/streamchart.css -c postcss.config.js",
    "c-scss": "sass src/css:docs/css --no-source-map",
    "eslint": "eslint -c .eslintrc.json --ext .ts --ext .js ./src",
    "list-globals": "npm list -g --depth 0",
    "make": "npm run c-scss & npm run c-postcss & npm run m-typedef & npm run m-rmdir & npm run m-css",
    "m-css": "cpy docs/css/streamchart.css dist",
    "m-typedef": "move-file dist/src/index.d.ts dist/index.d.ts",
    "m-rmdir": "rimraf dist/src dist/iife/src",
    "test": "http-server ./docs -a localhost -p 5000 -o",
    "test-upload": "npm publish --dry-run --access public",
    "upload": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibuckner/streamchart.git"
  },
  "author": "Ivor Buckner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibuckner/streamchart/issues"
  },
  "homepage": "https://github.com/ibuckner/streamchart#readme",
  "dependencies": {
    "@buckneri/spline": "^0.7.0",
    "d3-array": "^2.5.1",
    "d3-axis": "^1.0.12",
    "d3-scale": "^3.2.1",
    "d3-scale-chromatic": "^1.5.0",
    "d3-selection": "^1.4.2",
    "d3-shape": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/d3": "^5.7.2",
    "@types/d3-scale-chromatic": "^1.5.0",
    "@types/jest": "26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "autoprefixer": "^9.8.6",
    "clean-css": "^4.2.3",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsdoc": "30.2.4",
    "http-server": "^0.12.3",
    "jest": "^26.4.1",
    "jsdoc": "3.6.5",
    "move-file-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-sorting": "^5.0.1",
    "rimraf": "^3.0.2",
    "rollup": "2.26.4",
    "rollup-plugin-typescript2": "^0.27.2",
    "sass": "^1.26.8",
    "stylelint": "^13.6.1",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.5"
  }
}
